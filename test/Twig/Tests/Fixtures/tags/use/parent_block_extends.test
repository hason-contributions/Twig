--TEST--
"use" tag
--TEMPLATE--
{% extends 'layout.html.twig' %}
{% use 'blocks.html.twig' %}
{% block foo %}
    {{- parent() -}}
    Content of foo
{% endblock foo %}
--TEMPLATE(layout.html.twig)--
{% block foo -%}
    Content of foo (layout)
{% endblock foo %}
--TEMPLATE(blocks.html.twig)--
{% block foo %}
    {{- parent() -}}
    Content of foo (blocks)
{% endblock foo %}
{% block bar -%}
    Content of bar
{% endblock bar %}
--DATA--
return array()
--EXPECT--
Content of foo
Content of foo (first override)
Content of foo (second override)
Content of bar
Content of bar (second override)
